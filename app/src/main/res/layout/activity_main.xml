<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#242235"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="269dp"
        android:layout_height="120dp"
        android:src="@drawable/img" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:text="    Red Dead Redemption 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="995dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="     adicionado em 20/0/2022"
        android:textColor="@color/white"

        />


    <Button
        android:id="@+id/button1"
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#1997FE"
        android:text="visiatar página na loja"
        android:textColorHint="@color/white"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@id/button1"
        android:backgroundTint="#ff0000"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:ignore="SmallSp" />

    <ImageView
        android:layout_width="264dp"
        android:layout_height="120dp"
        android:src="@drawable/img_1" />

    <TextView
        android:layout_width="366dp"
        android:layout_height="24dp"
        android:text="     Call of Duty Mordern Warfare"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
            android:layout_width="995dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="      adicionado em 20/8/2021"
            android:textColor="@color/white"

            />


    <Button
        android:id="@+id/button2"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#1997FE"
        android:text="visiatar página na loja"
        android:textColorHint="@color/white"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:backgroundTint="#ff0000"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:ignore="SmallSp" />

</LinearLayout>


